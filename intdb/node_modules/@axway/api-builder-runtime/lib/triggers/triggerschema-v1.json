{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://axway.com/axway-flow-trigger/triggerschema-v1.json",
	"title": "Flow-trigger schema",
	"description": "The schema for flow-triggers",
	"type": "object",
	"properties": {
		"name": {
			"type": "string"
		},
		"enabled": {
			"type": "boolean"
		},
		"channel": {
			"type": "string"
		},
		"parameters": {
			"type": "object",
			"additionalProperties": {
				"type": "string"
			}
		},
		"invoke": {
			"type": "object",
			"properties": {
				"flow": {
					"type": "string"
				},
				"parameters": {
					"type": "object",
					"additionalProperties": {
						"type": "string"
					}
				}
			},
			"additionalProperties": false,
			"required": [
				"flow",
				"parameters"
			]
		}
	},
	"additionalProperties": false,
	"required": [
		"name",
		"enabled",
		"parameters",
		"invoke"
	]
}
